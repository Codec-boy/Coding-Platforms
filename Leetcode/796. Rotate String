class Solution {
    public boolean rotateString(String s, String goal) {

        if(s.length() != goal.length()) return false;

        // String result = s+s;
        // return result.contains(goal);


        int n = s.length();

        // try every starting point
        for (int start = 0; start < n; start++) {

            int match = 0;

            // compare characters manually
            while (match < n && s.charAt((start + match) % n) == goal.charAt(match)) {
                    match++;
            }

            if (match == n)
                return true;
        }
        return false;
    }
}
