class Solution {
    public int mySqrt(int x) {
    //  using loops
    //  if(x==0 || x==1)return x;                   

    //    long i = 1;
    //    while(i*i <= x){
    //     i++;
    //    } 
    //    return(int) i-1;

    //Newton's method(fast convergence)
    if(x == 0)return 0;

    long r = x;
    while(r*r > x){
        r = (r+x /r )/2;
    }
    return (int)r;
    }
}
