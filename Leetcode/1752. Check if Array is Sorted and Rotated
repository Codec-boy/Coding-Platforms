class Solution {
    public boolean check(int[] nums) {

        // int count = 0;
        // int n = nums.length;

        // for(int i =0;i<n;i++){
        //     if(nums[i] > nums[(i+1) %n]){
        //         count++;
        //     }
        //     if(count>1) return false;
        // }
        // return true;

        int n = nums.length;
        int pivot = -1;

        for(int i =0;i<n-1;i++){
            if(nums[i]>nums[i+1]){
                pivot = i;
                break;
            }
        }
        // already sorted
        if(pivot == -1) return true;

        //check circular condition
        if(nums[n-1] > nums[0]) return false;

        //verify rest is sorted
        for(int i =pivot+1;i<n-1;i++){
            if(nums[i] > nums[i+1]) return false;
        }
        return true;
    }
}
