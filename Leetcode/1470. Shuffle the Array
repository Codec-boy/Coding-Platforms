class Solution {
    public int[] shuffle(int[] nums, int n) {
        int[] result = new int[nums.length];
        
        int index = 0;
        for(int i =0;i<n;i++){
            result[index++] = nums[i];
            result[index++] = nums[i+n];
        }
        // for(int i = 0; i<n;i++){
        //     result[2*i] = nums[i];
        //     result[2*i+1] = nums[i+n];
        // } 
        return result;
    }
}
