class Solution {
    public int numberOfSteps(int num) {
        int count = 0;
        int n;
        // for(int i = 0;num>0;i++){
            while(num>0){
            if(num%2 == 0){
                num /= 2;
            }else{
                num = num-1;
            }
            count++;
        }
        return count;
    }
}
